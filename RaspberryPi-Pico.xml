<?xml version="1.0"?>

<PropertyList>
  <name type="string">RaspberryPi Pico</name>
   <button n="0">
    <desc type="string">Custom</desc>
    <repeatable type="string">true</repeatable>
    <binding>
      <command type="string">nasal</command>
      <script type="string">controls.elevatorTrim(0.75)</script>
      <module type="string">__js0</module>
    </binding>
  </button>
  
  <button n="1">
    <desc type="string">Custom</desc>
    <repeatable type="string">true</repeatable>
    <binding>
      <command type="string">nasal</command>
      <script type="string">controls.elevatorTrim(-0.75)</script>
      <module type="string">__js0</module>
    </binding>
  </button>

  <button n="2">
    <desc type="string">Custom</desc>
    <repeatable type="string">true</repeatable>
    <binding>
      <command type="string">property-adjust</command>
      <property type="string">/autopilot/settings/heading-bug-deg</property>
      <step type="double">1.0</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </button>

  <button n="3">
    <desc type="string">Custom</desc>
    <repeatable type="string">true</repeatable>
    <binding>
      <command type="string">property-adjust</command>
      <property type="string">/autopilot/settings/heading-bug-deg</property>
      <step type="double">-1.0</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </button>

  <button n="4">
    <desc type="string">Custom</desc>
    <repeatable type="string">true</repeatable>
    <binding>
      <command type="string">property-adjust</command>
      <property type="string">/instrumentation/nav/radials/selected-deg</property>
      <step type="double">1.0</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </button>

  <button n="5">
    <desc type="string">Custom</desc>
    <repeatable type="string">true</repeatable>
    <binding>
      <command type="string">property-adjust</command>
      <property type="string">/instrumentation/nav/radials/selected-deg</property>
      <step type="double">-1.0</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </button>

</PropertyList>
